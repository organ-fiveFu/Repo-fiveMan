<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vblessings.nhs.mapper.BusCarerCheckMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.vblessings.nhs.model.entity.business.BusCarerCheck" id="busCarerCheckMap">
        <result property="id" column="id"/>
        <result property="inspectionPeople" column="inspection_people"/>
        <result property="inspectionTime" column="inspection_time"/>
        <result property="sortNumber" column="sort_number"/>
        <result property="department" column="department"/>
        <result property="carerName" column="carer_name"/>
        <result property="score" column="score"/>
        <result property="remark" column="remark"/>
        <result property="creatorId" column="creator_id"/>
        <result property="updaterId" column="updater_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="isDel" column="is_del"/>
    </resultMap>
    <update id="delCheck">
        update bus_carer_check set
        is_del = 1
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>
    <select id="selectByTime" resultMap="busCarerCheckMap">
        select * from  bus_carer_check
        <where>
            <if test="startTime !=null">
                inspection_time >= #{startTime}
            </if>
            <if test="endTime !=null">
              and #{endTime} >= inspection_time
            </if>

            <if test="name !=null and name !=''">
                and carer_name like concat('%',#{name},'%')
            </if>
            and is_del = 0
        </where>
    </select>

</mapper>