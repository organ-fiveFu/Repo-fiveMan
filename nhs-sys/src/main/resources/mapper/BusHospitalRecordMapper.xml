<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vblessings.nhs.mapper.BusHospitalRecordMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.vblessings.nhs.model.entity.business.BusHospitalRecord" id="busHospitalRecordMap">
        <result property="id" column="id"/>
        <result property="aichiveId" column="aichive_id"/>
        <result property="businessNo" column="business_no"/>
        <result property="dischargeTime" column="discharge_time"/>
        <result property="admissionTime" column="admission_time"/>
        <result property="status" column="status"/>
        <result property="creatorId" column="creator_id"/>
        <result property="updaterId" column="updater_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="isDel" column="is_del"/>
        <result property="nursingLevel" column="nursing_level"/>
        <result property="admissionReason" column="admission_reason"/>
        <result property="hospitalDiagnosis" column="hospital_diagnosis"/>
        <result property="isSignNotification" column="is_sign_notification"/>
        <result property="name" column="name"/>
        <result property="sex" column="sex"/>
        <result property="age" column="age"/>
        <result property="idCard" column="id_card"/>
        <result property="contactAddress" column="contact_address"/>
        <result property="relationName" column="relation_name"/>
        <result property="contactNumber" column="contact_number"/>
        <result property="relation" column="relation"/>
        <result property="bedCode" column="bed_code"/>
        <result property="floorCode" column="floor_code"/>
        <result property="allergy" column="allergy"/>
        <result property="previousHistory" column="previous_history"/>
        <result property="feesDueDate" column="fees_due_date"/>
        <result property="feesDueStatue" column="fees_due_statue"/>
    </resultMap>
    <update id="out">
    update bus_hospital_record
    set status = 1
    discharge_time = #{dischargeTime}
    where business_no = #{businessNo}
    </update>
    <select id="queryBrokenLineByMonth" resultType="java.util.Map">
       SELECT  DATE_FORMAT(create_time,"%Y-%m") as date ,count(id)  originalNum FROM`bus_hospital_record`  where is_del =0
        <if test="endTime !=null">
            and #{endTime} >= creat_time
        </if>
        <if test="startTime !=null">
            and creat_time >= #{startTime}
        </if>
        GROUP BY DATE_FORMAT(create_time,"%Y-%m")
    </select>

</mapper>