<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.vblessings.nhs.mapper.BusNursingRecordMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.vblessings.nhs.model.entity.business.BusNursingRecord" id="busNursingRecordMap">
        <result property="id" column="id"/>
        <result property="businessNo" column="business_no"/>
        <result property="patientName" column="patient_name"/>
        <result property="isHaircut" column="is_haircut"/>
        <result property="isManicure" column="is_manicure"/>
        <result property="isCleanToilet" column="is_clean_toilet"/>
        <result property="isHangClothes" column="is_hang_clothes"/>
        <result property="isCleanRoom" column="is_clean_room"/>
        <result property="isMeals" column="is_meals"/>
        <result property="isWashGargle" column="is_wash_gargle"/>
        <result property="physicalAndMentalStatus" column="physical_and_mental_status"/>
        <result property="other" column="other"/>
        <result property="creatorId" column="creator_id"/>
        <result property="updaterId" column="updater_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="isDel" column="is_del"/>
    </resultMap>

    <update id="del">
        update bus_nursing_record
        set is_del = 1
        where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

</mapper>